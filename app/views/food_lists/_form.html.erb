    <%= form.label :donate_date %>
    <%= form.date_field :donate_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :collected_from %>
    <%= form.text_field :collected_from, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :donar_name %>
    <%= form.text_field :donar_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Save Food List", class: "btn btn-primary" %>
  </div>
<% end %>
